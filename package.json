{
  "name": "simple-form",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test npm run test:db && jest ./src/tests",
    "test:db": "docker-compose -f ./docker-compose.test.yml  up --build -d",
    "test:migrations:generate": "NODE_ENV=test && npm run typeorm -- migration:generate ./src/infrastructure/providers/postgresql/migrations/",
    "test:migrations:run": "NODE_ENV=test && npm run typeorm -- migration:run",
    "local:db": "docker-compose up --build -d",
    "start:dev": "NODE_ENV=local && nodemon --exec ts-node --transpileOnly src/index.ts",
    "start:local": "npm run local:db && npm run start:dev",
    "migrations:generate": "npm run typeorm -- migration:generate ./src/infrastructure/providers/postgresql/migrations/",
    "migrations:run": "npm run typeorm -- migration:run",
    "migrations:revert": "typeorm migration:revert",
    "typeorm": "typeorm-ts-node-esm -d ./ormconfig.ts "
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.12.0",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "typeorm": "0.3.11",
    "typeorm-naming-strategies": "^4.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "esbuild": "^0.14.49",
    "jest": "^26.6.3",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
